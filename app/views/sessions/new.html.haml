.row
  .twelve.columns{:style => "margin-bottom: 50px"}
    .six.columns{:style => "border: 1px solid #ccc; padding: 25px"}
      %h2 Log In
      = form_tag sessions_path do
        %div
          = label_tag :email
          = text_field_tag :email, params[:email], :class => 'row'
        %br/
        %div
          = label_tag :password
          = password_field_tag :password, nil, :class => 'row'
        %br/
        %br/
        .btn.primary.medium= submit_tag "Log In"
      %p= link_to "forgotten password?", new_password_reset_path
      %div
        = check_box_tag :remember_me, 1, params[:remember_me]
        = label_tag :remember_me
    .six.columns