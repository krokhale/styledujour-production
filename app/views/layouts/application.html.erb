<!DOCTYPE html>
<html>
<head>
  <title>Styledujour</title>
  <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= javascript_include_tag :modernizr %>
  <%= csrf_meta_tags %>

  <link href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.no-icons.min.css" rel="stylesheet">
  <link href="//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css" rel="stylesheet">
  <style>
      body {
          background-image: url("<%=asset_path "pgaebg.gif"%>");
      }

      .navbar-inverse .navbar-inner {
          background: url("<%=asset_path "headerbg.gif"%>") repeat-x top left #fff;
          height: auto;
          border-bottom: 1px solid #c2c2c2;
          padding-bottom: 5px;
      }
  </style>
</head>
<body>
<div class="navbar navbar-inverse navbar-fixed-top" style="background-image: url('headerbg.gif'); background-repeat:repeat-x top left #fff;">
  <div class="navbar-inner">
    <div class="">

      <div class=""></div>
      <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="brand" href="#"><%= image_tag("/assets/logo.png") %></a>

      <div class="nav-collapse collapse">

        <ul class="nav">
          <div class="" style="margin: auto;"><%= image_tag('/assets/imstylist.png', :alt=>"I'm Stylist") %></div>
        </ul>

        <div class="navbar-form rightTopmenu2">
          <ul class="topnav">
            <li><a href="/about_us">About us</a></li>
            <li><a href="/help">Help</a></li>
            <li class="active"><a href="#">Sign up</a></li>
          </ul>

          <div class="">
            <span class="icon-search" style=" position:absolute; z-index:1; left:5px; top:20px; opacity:0.5;"></span>
            <input style="width:235px; padding-left:25px;" id="prependedInput" type="text" placeholder="Search">
          </div>
        </div>

      </div>
      <!--/.nav-collapse -->
    </div>
  </div>
</div>
<div style="height:120px;">
</div>

<%= yield %>

<div class="container" id="footer">
  <div class="bottomLoading fixed" style="position:absolute;margin-bottom:0px;">
    <span><img alt="Beat2" src="/assets/beat2.png">Copyright Â© Style du Jour 2013</span>|
    <span><a> Policy</a></span>|
    <span><a>Terms Conditions</a></span>
  </div>

  <div class="backtotup"><a href="#"><span class="caret"></span></a></div>

</div>
</body>
<script type="text/javascript">
    function footer() {
        if ($(window).height() > $('body').height()) {
            var extra = $(window).height() - $('body').height();
            $('#footer').css('margin-top', extra);
        }
    }
    $(document).ready(function() {
        footer();
    });
</script>
</html>